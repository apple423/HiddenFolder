<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/identitytoolkit_page"
    android:layout_width="@dimen/identitytoolkit_page_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/identitytoolkit_text.header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/identitytoolkit_space_big"
        android:gravity="center"
        android:text="핀코드를 입력해주세요"/>

    <LinearLayout
        style="@style/identitytoolkit_inner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        style="@style/identitytoolkit_inner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        style="@style/identitytoolkit_inner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/identitytoolkit_text.label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/identitytoolkit_text_indent"
            android:layout_marginTop="@dimen/identitytoolkit_space_small"
            android:text="pin code"/>

        <EditText
            android:id="@+id/pincode_password"
            style="@style/identitytoolkit_text_input"
            android:hint="Enter pin-code"
            android:imeOptions="actionNext"
            android:inputType="number"/>

        <EditText
            android:id="@+id/pincode_confirm"
            style="@style/identitytoolkit_text_input"
            android:layout_marginTop="@dimen/identitytoolkit_space_small"
            android:hint="Confirm pin-code"
            android:imeOptions="actionDone"
            android:inputType="number"/>
    </LinearLayout>

    <Button
        android:id="@+id/pincode_next"
        style="@style/identitytoolkit_button"
        android:layout_marginTop="@dimen/identitytoolkit_space_big"
        android:enabled="false"
        android:text="완료"/>

</LinearLayout>

