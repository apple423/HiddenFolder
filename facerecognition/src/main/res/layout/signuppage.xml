<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/identitytoolkit_page"
    android:layout_width="@dimen/identitytoolkit_page_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/identitytoolkit_text.header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/identitytoolkit_space_big"
        android:gravity="center"
        android:text="회 원 가 입"/>

    <LinearLayout
        style="@style/identitytoolkit_inner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/identitytoolkit_text.label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/identitytoolkit_text_indent"
            android:text="@string/identitytoolkit_label_email"/>

        <EditText
            android:id="@+id/sign_up_email"
            style="@style/identitytoolkit_text_input"
            android:inputType="textEmailAddress"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/identitytoolkit_inner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/identitytoolkit_text.label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/identitytoolkit_text_indent"
            android:layout_marginTop="@dimen/identitytoolkit_space_small"
            android:text="@string/identitytoolkit_label_name"/>

        <EditText
            android:id="@+id/sign_up_display_name"
            style="@style/identitytoolkit_text_input"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"/>
    </LinearLayout>

    <LinearLayout
        style="@style/identitytoolkit_inner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/identitytoolkit_text.label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/identitytoolkit_text_indent"
            android:layout_marginTop="@dimen/identitytoolkit_space_small"
            android:text="@string/identitytoolkit_label_password"/>

        <EditText
            android:id="@+id/sign_up_password"
            style="@style/identitytoolkit_text_input"
            android:hint="@string/identitytoolkit_hint_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/sign_up_password_confirm"
            style="@style/identitytoolkit_text_input"
            android:layout_marginTop="@dimen/identitytoolkit_space_small"
            android:hint="@string/identitytoolkit_hint_password_confirm"
            android:imeOptions="actionDone"
            android:inputType="textPassword"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/sign_up_check_tos"
        style="@style/identitytoolkit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/identitytoolkit_space_small"
        tools:text="이용약관에 동의하십니까?"/>

    <Button
        android:id="@+id/sign_up_next"
        style="@style/identitytoolkit_button"
        android:layout_marginTop="@dimen/identitytoolkit_space_big"
        android:enabled="false"
        android:text="완료"/>

</LinearLayout>

