<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/identitytoolkit_page"
    android:layout_width="@dimen/identitytoolkit_page_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/identitytoolkit_text.header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/identitytoolkit_space_big"
        android:gravity="center"
        android:text="Hidden Folder"/>

    <LinearLayout
        android:id="@+id/identitytoolkit_idp_buttons"
        style="@style/identitytoolkit_inner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <Button
    android:id ="@+id/sign_in_google"
    android:layout_width="265dp"
    android:layout_height="38dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="16dp"
    android:text="Login with google+"
    android:textColor="#fff"
    android:textSize="13dp"
    android:background="#eb543b"/>

    <Button
        android:id ="@+id/sign_in_facebook"
        android:layout_width="265dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Login with facebook"
        android:textColor="#fff"
        android:textSize="13dp"
        android:background="#2683c2"/>

    <LinearLayout
        android:id="@+id/identitytoolkit_or_separator"
        style="@style/identitytoolkit_inner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/identitytoolkit_space_big"
        android:layout_marginTop="@dimen/identitytoolkit_space_big">

        <View
            style="@style/identitytoolkit_divider"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>

        <TextView
            style="@style/identitytoolkit_text.instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/identitytoolkit_text_indent"
            android:layout_marginRight="@dimen/identitytoolkit_text_indent"
            android:text="@string/identitytoolkit_label_or"/>

        <View
            style="@style/identitytoolkit_divider"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        style="@style/identitytoolkit_inner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/identitytoolkit_text.label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/identitytoolkit_label_email"/>

        <EditText
            android:id="@+id/sign_in_email"
            style="@style/identitytoolkit_text_input"
            android:hint="ex) apple@company.com"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"/>

        <TextView
            style="@style/identitytoolkit_text.label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="passward"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/sign_in_passward"
            style="@style/identitytoolkit_text_input"
            android:hint="passward"
            android:imeOptions="actionDone"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/sign_in_login"
            style="@style/identitytoolkit_button"
            android:layout_marginTop="@dimen/identitytoolkit_space_big"
            android:enabled="false"
            android:text="로그인"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/sign_in_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="회원가입"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#000000"
                android:text="|"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/sign_in_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="비밀번호 찾기"
                android:textStyle="bold"

                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
